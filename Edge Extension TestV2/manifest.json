{
  "name": "SelectionSearchShortcut",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "An extension that adds a shortcut to search for the currently selected text (Ctrl + Q)",
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs",
    "browsingData",
    "scripting",
    "commands",
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "icons/cse16x16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}